<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hu.bme.aut.android.bmelostandfound">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BMELostAndFound"
        android:name=".ContactApplication">
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".PostTabsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BMELostAndFound.NoActionBar" />
        <activity
            android:name=".CreatePostActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BMELostAndFound.NoActionBar" />
        <activity
            android:name=".PostDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BMELostAndFound.NoActionBar" />
        <activity
            android:name=".MyPostsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BMELostAndFound.NoActionBar" />
        <activity
            android:name=".ContactsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BMELostAndFound.NoActionBar" />
    </application>

</manifest>