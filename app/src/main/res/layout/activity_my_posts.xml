<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryLightColor"
    tools:context=".MyPostsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.BMELostAndFound.AppBarOverlay">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarMyPosts"
        android:layout_width="match_parent"
        android:background="@color/primaryDarkColor"
        android:layout_height="?attr/actionBarSize"
        app:popupTheme="@style/Theme.BMELostAndFound.AppBarOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <include
        android:id="@+id/content_posts"
        layout="@layout/content_posts" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>